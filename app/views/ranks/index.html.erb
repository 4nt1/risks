<h1>Classemnts</h1>

<table class='table table-bordered table-hover'>
  <thead>
    <tr>
      <th>Code</th>
      <th>Description</th>
      <th>Types de risque</th>
      <th>Risques</th>
      <th>Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @ranks.each do |rank| %>
      <tr>
        <td><%= rank.code %></td>
        <td><%= rank.description %></td>
        <td><%= rank.types.map(&:description)*' - ' %></td>
        <td><%= rank.risks.map(&:description)*' - ' %></td>
        <td>
          <%= link_to 'Éditer', edit_rank_path(rank), class: 'btn btn-info' %>
          <%= link_to 'Supprimer', rank, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

